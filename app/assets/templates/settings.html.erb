              <option selected disabled>--Select User Type--</option>
              <option value="admin" ng-select="list.user_type == 'admin'">Admin</option>
              <option value="regular" ng-select="list.user_type == 'regular">Regular</option>
              <option value="secretary" ng-select="list.user_type == 'secretary'">Secretary</option>
              <option value="co-owner" ng-select="list.user_type == 'co-owner'">Co-Owner</option>
            </select>
            <br />
            <input type="text" ng-model="edit.firstname" placeholder="First Name" class="form-control" require>
            <br />
            <input type="text" ng-model="edit.lastname" placeholder="Last Name" class="form-control" require>
            <br />
            <input type="text" ng-model="edit.contact" placeholder="Contact #" class="form-control" require>
            <br />
            <input type="text" ng-model="edit.address" placeholder="Address" class="form-control" require>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary"> Update User</button>
        </div>
      </form>
    </div>
  </div>
</div>

