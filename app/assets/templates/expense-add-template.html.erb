<div class="main-wrapper col-lg-12">
<h1 class="page-header">Add Expenses</h1>
<div class="row">
    <div class="col-md-12">
        <div class="content expenses">
            <div class="form-expenses">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Cash Borrowed</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Borrowed from</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Cash On Hand</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12 purpose">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
